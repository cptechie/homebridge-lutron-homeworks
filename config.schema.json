{
   "pluginAlias":"LutronHomeworks",
   "pluginType":"platform",
   "singular":true,
   "schema":{
      "$schema":"http://json-schema.org/draft-07/schema",
      "$id":"http://example.com/example.json",
      "type":"object",
      "title":"The root schema",
      "description":"The root schema comprises the entire JSON document.",
      "default":{
         
      },
      "examples":[
         {
            "hostname":"192.168.1.XX",
            "ssl":false
         }
      ],
      "required":[
         "name",
         "hostname",
         "ssl"
      ],
      "properties":{
         "name":{
            "title":"Name",
            "type":"string",
            "required":true,
            "default":"Lutron Homeworks"
         },
         "hostname":{
            "$id":"#/properties/hostname",
            "type":"string",
            "title":"Hostname/IP",
            "description":"Hostname or IP of Homeworks Illumination",
            "default":"",
            "examples":[
               "192.168.1.XX"
            ],
            "format": "hostname"
         },
         "port":{
            "$id":"#/properties/port",
            "type":"integer",
            "title":"Port",
            "description":"Network port of Homeworks Illumination",
            "default":80,
            "examples":[
               80, 443
            ],
            "minimum": 0,
            "maximum": 65535
         },
         "ssl":{
            "$id":"#/properties/ssl",
            "type":"boolean",
            "title":"SSL",
            "description":"Select to use HTTPS for connection",
            "default":false,
            "examples":[
               false, true
            ]
         }
      },
      "additionalProperties":true
   }
}